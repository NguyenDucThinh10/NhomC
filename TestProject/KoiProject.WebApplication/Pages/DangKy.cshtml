@page
@model KoiProject.WebApplication.Pages.DangKyModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link rel="stylesheet" href="~/css/Dangky.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Đăng ký tài khoản</h2>

        <form method="post">
            <div class="form-group">
                <label for="fullName">Họ tên</label>
                <input type="text" id="fullName" asp-for="FullName" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                @if (Model.EmailExists)
                {
                    <span class="text-danger">Email đã được đăng ký.</span>
                }
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input type="password" id="password" asp-for="Password" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="confirm-password">Xác nhận mật khẩu</label>
                <input type="password" id="confirm-password" asp-for="ConfirmPassword" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </form>
    </div>

    <!-- Modal thông báo thành công -->
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Đăng ký thành công!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script để hiển thị modal khi đăng ký thành công -->
    <script>
        $(document).ready(function () {
            var isRegistered = '@Model.IsRegistered' === 'True';
            if (isRegistered) {
                $('#successModal').modal('show');
            }
        });
    </script>
</body>
</html>

<style>
    /* Định dạng container chính */
    .container {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    /* Tiêu đề của form */
    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    /* Định dạng các ô input và label */
    .form-group label {
        font-weight: bold;
        color: #555;
    }

    .form-group input {
        height: 40px;
        padding: 5px 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        width: 100%;
        box-sizing: border-box;
        font-size: 16px;
    }

        .form-group input:focus {
            border-color: #007bff;
            outline: none;
        }

    /* Nút đăng ký */
    .btn-primary {
        width: 100%;
        font-size: 18px;
        padding: 10px;
        border-radius: 4px;
    }

    /* Định dạng modal */
    .modal-content {
        border-radius: 8px;
    }

    .modal-title {
        font-weight: bold;
        color: #333;
    }

    .modal-body {
        font-size: 16px;
        color: #555;
    }

    /* Nút đóng modal */
    .modal-footer .btn-secondary {
        border-radius: 4px;
    }

    /* Thông báo lỗi */
    .text-danger {
        font-size: 14px;
        color: red;
    }
</style>
