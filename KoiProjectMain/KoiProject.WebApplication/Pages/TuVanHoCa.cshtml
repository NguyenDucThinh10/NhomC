@page
@model KoiProject.WebApplication.Pages.TuVanHoCaModel
@{

}

<!DOCTYPE html>
<html lang="vi">
<head>
    <link rel="stylesheet" href="./fonts/themify-icons/themify-icons.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tư vấn chọn hồ cá Phong Thủy</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        .consultation-container {
            display: flex;
            justify-content: space-around;
            align-items: flex-start;
            padding: 20px;
        }

        .form-container, .result-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            width: 40%;
        }

        .form-container-1 {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            width: 40%;
            position: relative;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input, select {
            padding: 8px;
            width: 100%;
            box-sizing: border-box;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-submit {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

            .btn-submit:hover {
                background-color: #45a049;
            }

        h1, h2 {
            color: #333;
            text-align: center;
        }

        .result-content {
            font-size: 16px;
            margin-top: 10px;
            line-height: 1.5;
        }

            .result-content ul {
                list-style-type: square;
                margin-top: 10px;
                margin-left: 20px;
            }

        .modal-close {
            position: absolute;
            right: 15px;
            top: 15px;
        }

        .ti-close:hover {
            color: red;
        }

        .error-message {
            color: red;
            font-size: 12px;
        }
    </style>
</head>
<body>

    <h1>Tư vấn Chọn Hồ Cá Phong Thủy</h1>

    <div class="consultation-container">
        <!-- Form nhập thông tin -->
        <div class="form-container">
            <form method="post" id="consultationForm" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="gender">Giới tính:</label>
                    <select id="gender">
                        <option value="Male">Nam</option>
                        <option value="Female">Nữ</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="birthYear">Năm sinh:</label>
                    <input type="number" id="birthYear" />
                    <span id="error-message" class="error-message"></span>
                </div>

                <div class="form-group">
                    <label for="element">Bản mệnh:</label>
                    <select id="element" asp-for="Element">
                        <option value="Kim">Kim</option>
                        <option value="Mộc">Mộc</option>
                        <option value="Thủy">Thủy</option>
                        <option value="Hỏa">Hỏa</option>
                        <option value="Thổ">Thổ</option>
                    </select>
                </div>

                <div class="form-group" style="text-align: center;">
                    <button type="submit" class="btn-submit">Tư vấn chi tiết</button>
                </div>
            </form>
        </div>

        @if (Model.PondRecommendations != null && Model.PondRecommendations.Any())
        {
            <div class="form-container-1">
                <div class="modal-close">
                    <i class="ti-close"></i>
                </div>
                <h2>Kết quả tư vấn:</h2>
                <ul>
                    @foreach (var pond in Model.PondRecommendations)
                    {
                        <li>
                            <strong>Hình dạng:</strong> @pond.Shape<br />
                            <strong>Hướng đặt:</strong> @pond.Direction<br />
                            <strong>Mô tả:</strong> @pond.Description
                        </li>
                    }
                </ul>
            </div>
        }

        <script>
            //đóng bảng tư vấn
            const modalClose = document.querySelector('.modal-close'); 

            function reload() {
                window.location.href = '/TuVanHoCa';  
            }

            modalClose.addEventListener('click', reload);  

            // kiểm tra năm sinh
            function validateForm() {
                const birthYear = document.getElementById('birthYear').value;
                const errorMessage = document.getElementById('error-message');
                const year = parseInt(birthYear);

                if (isNaN(year) || year < 1945 || year > 2024) {
                    errorMessage.textContent = 'Năm sinh không hợp lệ!';
                    return false; 
                }

                
            }
        </script>

    </div>
</body>
</html>
