@page
@model KoiProject.WebApplication.Pages.KKoiLoverModel
@{
    ViewData["Title"] = "Tin tức";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Koilover triển khai tem chống hàng giả</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            display: flex;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            max-width: 1000px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            gap: 20px;
            flex-direction: row-reverse; /* Added to reverse the layout */
        }

        .content {
            max-width: 600px;
            flex: 1;
        }

        h1 {
            font-size: 24px;
            color: #2b5d8f;
            margin-bottom: 10px;
        }

        .date {
            color: #666;
            font-size: 14px;
            margin-bottom: 15px;
        }

        .agreement-image {
            width: 100%;
            border-radius: 8px;
            margin-top: 15px;
        }

        .additional-text {
            font-style: italic;
            color: #333;
            font-size: 15px;
            margin-top: 15px;
        }

        .sidebar {
            width: 250px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            background-color: #0051A4;
            color: #fff;
            padding: 10px;
            display: flex;
            align-items: center;
            font-weight: bold;
            border-radius: 4px;
        }

            .sidebar-header .icon {
                margin-right: 10px;
            }

        .sidebar-content .item {
            display: flex;
            margin-top: 10px;
        }

            .sidebar-content .item img {
                width: 60px;
                height: 60px;
                border-radius: 4px;
                margin-right: 10px;
            }

        .info p {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .info span {
            font-size: 12px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar Section on the Right Side -->
        <div class="sidebar">
            <div class="sidebar-header">
                <i class="icon">📄</i>
                <span>GÓC CHỮA BỆNH</span>
            </div>
            <div class="sidebar-content">
                <div class="item">
                    <img src="~/Images/600cakoi/mang.png" alt="Hội chứng bệnh Thối vây - Thối mang">
                    <div class="info">
                        <p><a href="#">Hội chứng bệnh Thối vây - Thối mang</a></p>
                        <span>22/12/2021</span>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/600cakoi/trung-loa.jpg" alt="Trùng loa kèn (Epistylis) ở cá Koi">
                    <div class="info">
                        <p><a href="#">Trùng loa kèn (Epistylis) ở cá Koi</a></p>
                        <span>22/12/2021</span>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/600cakoi/tri-benh.png" alt="Cách nhận biết, phòng ngừa và xử lý bệnh">
                    <div class="info">
                        <p><a href="#">Cách nhận biết, phòng ngừa và xử lý bệnh</a></p>
                        <span>22/12/2021</span>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/600cakoi/mat-loi.jpg" alt="Bệnh Popeye (lồi mắt) ở cá Koi - Cách chữa">
                    <div class="info">
                        <p><a href="#">Bệnh Popeye (lồi mắt) ở cá Koi - Cách chữa</a></p>
                        <span>22/12/2021</span>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/600cakoi/nam.jpg" alt="Bệnh nấm mang ở cá chép Koi">
                    <div class="info">
                        <p><a href="#">Bệnh nấm mang ở cá chép Koi</a></p>
                        <span>13/03/2021</span>
                    </div>
                </div>
            </div>
            <div class="sidebar-header">
                <i class="icon">📄</i>
                <span>TIN CỘNG ĐỒNG</span>
            </div>
            <div class="sidebar-content">
                <div class="item">
                    <img src="~/images/600cakoi/trien-lam.png" alt="600 con cá koi Nhật thi triển lãm cá koi">
                    <div class="info">
                        <p><a href="600cakoi">600 con cá koi Nhật thi triển lãm cá koi</a></p>
