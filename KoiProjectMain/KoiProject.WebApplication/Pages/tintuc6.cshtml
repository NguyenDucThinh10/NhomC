    ViewData["Title"] = "Tin tức";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chương trình khuyến mãi tháng 8</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
        }

        .breadcrumb {
            font-size: 20px;
            color: #555;
            margin-bottom: 15px;
        }

            .breadcrumb a {
                color: #555;
                text-decoration: none;
            }

        .date {
            font-size: 12px;
            color: #888;
            text-align: right;
        }

        .promo {
            text-align: center;
            margin-bottom: 20px;
        }

            .promo h1 {
                color: black;
                font-size: 24px;
                margin-top: 0;
            }

            .promo h2 {
                color: red;
