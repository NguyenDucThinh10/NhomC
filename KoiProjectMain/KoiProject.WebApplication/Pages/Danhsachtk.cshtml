@page
@model KoiProject.WebApplication.Pages.DanhsachtkModel
@{
    ViewData["Title"] = "Accounts";
}

<h1>Danh sách tài khoản</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>User Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@account.AccountId</td>
                <td>@account.FullName</td>
                <td>@account.Email</td>
                <td>@account.Password</td>
                <td>@account.UserRoleId</td>
                <td>
                    <a asp-page="/Edit" asp-route-id="@account.AccountId">Edit</a> |
                    <a asp-page="/Delete" asp-route-id="@account.AccountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="/Create" class="btn btn-primary mt-3">Thêm tài khoản mới</a>
<style>
    /* Tăng chiều rộng của bảng */
    .table-container {
        margin: 20px auto;
        max-width: 95%;
        width: 100%;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    /* Bảng */
    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
    }

        /* Tiêu đề bảng */
        .table thead th {
            background-color: #343a40;
            color: #fff;
            text-align: left;
            padding: 12px 15px;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        /* Các ô trong bảng */
        .table tbody td {
            padding: 12px 15px; /* Tăng khoảng cách giữa nội dung và viền ô */
            border: 1px solid #ddd; /* Viền xám nhạt để phân biệt rõ ô */
            text-align: left;
            vertical-align: middle;
        }

        /* Dòng bảng hover */
        .table tbody tr:hover {
            background-color: #f9f9f9;
            transition: background-color 0.3s ease;
        }

        /* Độ rộng cột cụ thể */
        .table th:nth-child(2),
        .table td:nth-child(2) {
            width: 20%; /* Full Name */
        }

        .table th:nth-child(3),
        .table td:nth-child(3) {
            width: 25%; /* Email */
        }

        .table th:nth-child(4),
        .table td:nth-child(4) {
            width: 15%; /* Password */
        }

        .table th:nth-child(5),
        .table td:nth-child(5) {
            width: 10%; /* User Role */
        }

        /* Nút hành động */
        .table td:last-child a {
            margin-right: 5px; /* Khoảng cách giữa các nút */
        }

    .btn {
        font-size: 0.9rem;
        padding: 6px 10px;
        border-radius: 5px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #212529;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    /* Hiệu ứng hover cho nút */
    .btn:hover {
        opacity: 0.9;
    }
    /* Nút "Thêm tài khoản mới" */
    .mt-3 {
        margin-top: 20px; /* Tạo khoảng cách 20px giữa nút và bảng */
    }


</style>