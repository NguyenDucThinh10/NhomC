@page
@model KoiProject.WebApplication.Pages.DashboardModel
@{
	ViewData["Title"] = "Dashboard";
    Layout = null;
}
<main>
    <!-- Sử dụng iframe để tải nội dung Dashboard -->
    <iframe src="/Dashboard/index.html"
            id="dashboardIframe"
            style="width: 100%; height: 100%; border: none;"></iframe>
</main>

<!-- CSS -->
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%; /* Chiếm toàn bộ chiều cao trình duyệt */
        display: flex;
        flex-direction: column; /* Cấu trúc cột để đẩy footer xuống cuối */
    }

    main {
        flex: 1; /* Cho phép nội dung chính chiếm không gian còn lại */
        display: flex;
        flex-direction: column;
        overflow: hidden; /* Loại bỏ thanh cuộn bên trong main */
    }

    iframe {
        flex: 1; /* Đảm bảo iframe chiếm toàn bộ chiều cao main */
        width: 100%;
        height: 100%;
        border: none;
    }
</style>
<script>
    window.addEventListener('beforeunload', function () {
        const iframe = document.getElementById('dashboardIframe');
        if (iframe) {
            iframe.src = ''; // Reset nội dung iframe
        }
    });
</script>
